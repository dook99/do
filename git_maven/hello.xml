<?xml version="1.0"?>
<project name='mkdir' default='copy'>

	
	<target name='clean' >
		<delete dir='build'/>
		<delete dir='dest'/>
	</target>
	
	<target name='create a dir' depends='clean'>
		<mkdir dir="build"/>
		<mkdir dir="dest"/>
	</target>
	
	<target name='copy' depends='create a dir'>
		<copy file='src/Hello.java' todir='dest'/>
	</target> 
	
</project>